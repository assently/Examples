@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container align-content-center">
    <div class="row justify-content-center">
        <div class="col-md-6 col-md-offset-3 text-center">
            <h2 style="color: white"> Customer Information To Create Contract From Template</h2>
            <hr />
            <form method="post">
                @Html.AntiForgeryToken()
                <div style="background: white">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>
                                    <label>Name </label>
                                </td>
                                <td>
                                    <input value="@Model.Name" name="Name" type="text" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label>Email </label>
                                </td>
                                <td>
                                    <input value="@Model.Email" name="Email" type="email" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label>Phone Number </label>
                                </td>
                                <td>
                                    <input value="@Model.PhoneNumber" name="PhoneNumber" type="text" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label>Personal Number </label>
                                </td>
                                <td>
                                    <input value="@Model.PersonalNumber" name="PersonalNumber" type="text" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <hr />
                    <div class="form-group">
                        <label>Contract Description </label>
                    </div>
                    <div class="form-group">
                        <textarea class="form-group" value="@Model.Description" style="height:200px; width:350px;" name="Description"></textarea>
                    </div>
                </div>
                @if (!string.IsNullOrWhiteSpace(@Model.Message))
                {
                    <div class="form-group">
                        <span style="color: white">
                            @Model.Message
                        </span>
                    </div>
                    <br>
                }
                <div class="form-group">
                    <input value="Create Contract" class="button-style" type="submit" />
                </div>
            </form>
        </div>
    </div>
</div>