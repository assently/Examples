@model Assently.Samples.DotnetCore.Models.CoreId.AuthenticationResult

<div class="card text-center">
    <div class="card-body">
        <h5 class="card-title">
            Confirm login
        </h5>

        <p class="card-text">Log in to this service. </p>
        <form asp-controller="Authentication" asp-action="Login" method="post">
            <input type="hidden" name="Type" value="@Model.Type">
            <input type="hidden" name="Success" value="@(Model.Success ? "true" : "false")">
            <input type="hidden" name="Token" value="@Model.Token">
            <input type="hidden" name="ErrorMessage" value="@Model.ErrorMessage">
            <input type="hidden" name="TransactionId" value="@Model.TransactionId">
            <p class="text-center">
                <button type="submit" class="btn btn-primary">Continue login</button>
            </p>
        </form>

    </div>
</div>
